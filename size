#include <stdio.h>

void changePictureSize(int width, int height) {
    /*
    This function changes the size of a picture.
    
    Parameters:
    width (int): The new width of the picture
    height (int): The new height of the picture
    
    Returns:
    None
    */
    
    // Check if the width and height are valid
    if (width <= 0 || height <= 0) {
        printf("Invalid picture size\n");
        return;
    }
    
    // Change the picture size
    printf("Picture size changed to %d x %d\n", width, height);
}

int main() {
    // Example usage
    int newWidth = 800;
    int newHeight = 600;
    
    changePictureSize(newWidth, newHeight);
    
    return 0;
}
